<% include ./partials/header %>
    <div class="row">
        <h1 style="text-align: center">Sign Up</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/register" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="displayName" id="displayName" placeholder="First Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="username" id="username" placeholder="you@yourcompany.com">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" id="password" placeholder="password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Sign Up</button>
                </div>
            </form>
            <a href="/teachers">Go Back</a>
        </div>
    </div>
<% include ./partials/footer %>

