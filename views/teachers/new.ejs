<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Add a New Teacher</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/teachers" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="image" id="image" pattern="^https:\/\/images\.unsplash\.com\/.*" title="Only images from images.unsplash.com allowed. See link below." placeholder="https://images.unsplash.com/..." required>
                    <small>Click <a href="https://images.unsplash.com">here</a> for unsplash images.</small>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Anywhere, USA">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="description" id="description" placeholder="USA High School">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/teachers">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>

